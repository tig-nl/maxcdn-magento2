<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="general" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>General Settings</label>
        <comment>Make sure you've already configured an API Application in your MaxCDN-account. All necessary credentials can be found under 'Manage' > 'API' inside your created API application.</comment>
        <field id="cdn_is_enabled" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable Module</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>tig_max_cdn/general/cdn_is_enabled</config_path>
        </field>
        <field id="cdn_company_alias" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Company Alias</label>
            <config_path>tig_max_cdn/general/cdn_company_alias</config_path>
        </field>
        <field id="cdn_consumer_key" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Consumer Key</label>
            <config_path>tig_max_cdn/general/cdn_consumer_key</config_path>
        </field>
        <field id="cdn_consumer_secret" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Consumer Secret</label>
            <config_path>tig_max_cdn/general/cdn_consumer_secret</config_path>
        </field>
    </group>
</include>
